{
  "compilerOptions": {
    "target": "es2020",               // Updated from es5 to leverage modern features
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,                  // Keeps your existing setting
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "bundler",    // Changed from "node" for Vite compatibility
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",                   // Added for path aliases
    "paths": {                        // Added for cleaner imports
      "@/*": ["src/*"]
    }       // Added for Vite env variables
  },
  "include": [
    "src"
  ],
  "exclude": ["node_modules", "dist"] // Added to ignore build files
}